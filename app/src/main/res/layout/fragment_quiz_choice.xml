<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="radoslav.yordanov.quizgames.controller.QuizChoiceFragment">

    <ImageView
        android:id="@+id/questionImg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp" />

    <Button
        android:id="@+id/selection1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:onClick="onSelectionClick" />

    <Button
        android:id="@+id/selection2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="onSelectionClick" />

    <Button
        android:id="@+id/selection3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="onSelectionClick" />

    <Button
        android:id="@+id/selection4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="onSelectionClick" />
</LinearLayout>
